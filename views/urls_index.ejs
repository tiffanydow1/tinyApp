<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


<link rel="stylesheet" href="/css/styles.css" type="text/css">
</head>

<body>
  <%- include('partials/_header') %>
  <% if(!user) { %>
    <a href="login"> Please log in to see your URLs</a>
 <% } else { %>

    <div class="container-fluid">
      <table class = "table table-hover">
        <thead class="table-top">
          <tr>
            <th>Short URL</th>
            <th>Long URL</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% for ( let shortUrl in urls ) { %>
          <tr>
            <td><%= shortUrl %></td>
            <td><%= urls[shortUrl].longUrl %></td>
            <td>
              <form method="POST" action="/urls/<%= shortUrl %>/delete" class="deleteBtn">
                <input type="submit" value="Delete">
              </form>
              <form method="GET" action="/urls/<%= shortUrl %>">
                <input type="submit" value="Update">
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <p>Want to add a new URL? Click <a href="urls/new">here</a>.</p/>
      <% } %>
</body>
</html>










